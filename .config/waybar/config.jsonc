    "clock": {
        "format": " {:%m.%d.%Y   %H:%M}   "
    },

	"custom/media": {
        "format": "{}		",
        "interval": 1,
        "exec": "$HOME/.config/waybar/media.sh"
    },

    "wireplumber": {
        "format": "\udb81\udd7e  {volume}%",
        "max-volume": 100,
        "scroll-step": 5
    },

    // "battery": {
    //     "bat": "BAT1",
