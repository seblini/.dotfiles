    //     "format-icons": ["\uf244", "\uf243", "\uf242", "\uf241", "\uf240"],
    // },

	"cpu": {
		"interval": 1,
		"format": "  {usage}%",
	},

    "memory": {
        "interval": 10,
        "format": "{used:0.1f}GiB  "
    },

	"disk#root": {
		"interval": 1,
		"format": "/: {used} of {total}  ",
		"path": "/",
	},

	"disk#home": {
		"interval": 1,
		"format": "/home: {used} of {total}  ",
		"path": "/home",
	},

	"network": {
		"interval": 2,
		"format": "{ifname}: {bandwidthDownBits} ↓ {bandwidthUpBits} ↑",
	},

