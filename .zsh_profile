# -- functions --

addToPathFront() {
    if [[ ":$PATH:" != *":$1:"* ]]; then
        export PATH="$1:$PATH"
    fi
}

# -- aliases --

# misc
alias ls='ls --color=auto'
alias grep='grep --color=auto'

# dotfiles
alias dotfiles='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'
alias dfsync='dotfiles add -u && dotfiles commit -m "backup: $(date "+%Y-%m-%d %H:%M:%S")" && dotfiles push'

# todo
alias t='todo.sh'

# nvim
alias nv='nvim .'

# git
alias gs='git status'
alias ga='git add'
alias gc='git commit'
alias gd='git diff'
alias gp='git push'
alias gf='git fetch'
alias gm='git merge'

# -- env vars --

# history
HISTFILE=~/.histfile
HISTSIZE=5000
SAVEHIST=$HISTSIZE
HISTDUP=erase
setopt appendhistory
setopt sharehistory
setopt hist_ignore_space
setopt hist_ignore_all_dups
setopt hist_save_no_dups
setopt hist_ignore_dups
setopt hist_find_no_dups

# fzf
export FZF_DEFAULT_COMMAND="find . -type f -print -o -type l -print 2> /dev/null | sed s/^..//"

# -- keybinds --

# vi
bindkey -v
bindkey '^?' backward-delete-char

# tmux
bindkey -s '^f' 'tmux-sessionizer\r\n'

# history
bindkey '^p' history-search-backward
bindkey '^n' history-search-forward

# completion
bindkey '^o' autosuggest-accept

# -- plugins --

# Syntax highlighting
source /usr/share/zsh/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

# Completion
autoload -Uz compinit && compinit
zstyle ':completion:*' matcher-list 'm:{a-z}={A-Z}'

# Autosuggestions
source /usr/share/zsh/plugins/zsh-autosuggestions/zsh-autosuggestions.zsh

# -- -- --

# add user created executables to path
addToPathFront $HOME/.local/bin
